doctype 5
html
	head
		title= title

		link(rel='stylesheet' href='/gymlocker/css/jquery-ui-1.8.17.custom.css')
		link(rel='stylesheet' href='/gymlocker/css/bootstrap.css')
		link(rel='stylesheet' href='/gymlocker/css/style.css')
		block stylesheets

		script(src='/gymlocker/js/libs/jquery-1.7.1.min.js')
		script(src='/gymlocker/js/libs/bootstrap.js')
		script(src='/gymlocker/js/layout.js')
		block scripts

	body!= body
		div#main-nav.navbar.navbar-fixed-top
			div.navbar-inner
				div.container
					ul.nav
						a.brand(href='/GymLocker/main') GymLocker
