							li#li-admin
								a#nav-admin(href='/GymLocker/admin/members') Admin

						li#li-fitness
							a#nav-fitness(href='/GymLocker/fitness/library') Fitness
						//- li#li-biometric
						//- 	a#nav-biometric(href='/GymLocker/biometrics') Biometrics

						if role == 2
							li#li-pro
								a#nav-trainer(href='/GymLocker/trainer/clients') Trainer

						//- li#li-find
						//-	a#nav-find-trainer(href='/GymLocker/find_a_trainer') Marketplace

					span.pull-right
						ul.nav
							if role == 2
								li
									a#requests(href='GymLocker/trainer/requests' title='Quick_requests')

							//- if role != 4
							//- 	li
							//- 		a(href='/GymLocker/settings' title='Settings')
							//- 			i.icon-cog.icon-white
							//- 			|  Settings

							li
								a(href='/GymLocker/logout' title='Logout')
									i.icon-off.icon-white
									|  Logout

		block content